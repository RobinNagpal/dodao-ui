{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2020",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", ".build"]
}
