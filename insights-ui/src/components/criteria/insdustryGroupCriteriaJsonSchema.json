{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IndustryGroupCriteria",
  "type": "object",
  "properties": {
    "key": {
      "type": "string",
      "minLength": 10,
      "maxLength": 50
    },
    "name": {
      "type": "string",
      "minLength": 10,
      "maxLength": 100
    },
    "shortDescription": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500
    },
    "importantMetrics": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ImportantMetric"
      }
    },
    "reports": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Report"
      }
    }
  },
  "required": ["key", "name", "shortDescription", "importantMetrics", "reports"],
  "definitions": {
    "ImportantMetric": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "minLength": 10,
          "maxLength": 50
        },
        "name": {
          "type": "string",
          "minLength": 10,
          "maxLength": 100
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "formula": {
          "type": "string",
          "minLength": 10,
          "maxLength": 200
        }
      },
      "required": ["name", "key", "description", "formula"]
    },
    "Report": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "minLength": 10,
          "maxLength": 50
        },
        "name": {
          "type": "string",
          "minLength": 10,
          "maxLength": 100
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "outputType": {
          "type": "string",
          "enum": ["Text", "BarGraph", "PieChart"]
        }
      },
      "required": ["key", "name", "description", "outputType"]
    }
  }
}
